@using SimpleTaskApp.MobilePhones.Dto
@using SimpleTaskApp.Areas.Admin.Models.Common.Modals

@model MobilePhoneDto

@{
    Layout = null;
}

@await Html.PartialAsync(
        "~/Areas/Admin/Views/Shared/Modals/_ModalHeader.cshtml",
        new ModalHeaderViewModel(L("MobilePhoneDetail"))
    )

<div class="modal-body">
    <div class="row">
        <!-- Bên trái: Ảnh -->
        <div class="col-md-4 text-center">
            <div class="card shadow-sm border-0">
                <div class="card-body p-2">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name"
                             class="img-fluid rounded mb-2"
                             style="max-height: 250px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="text-muted border rounded py-5">
                            <i class="fa fa-mobile-alt fa-3x"></i>
                            <p>@L("NoImage")</p>
                        </div>
                    }

                    <h5 class="mt-2 font-weight-bold">@Model.Name</h5>
                    <span class="badge badge-info">@Model.Brand</span>
                    @if (Model.IsNew)
                    {
                        <span class="badge badge-success ml-1">@L("New")</span>
                    }
                    @if (Model.IsOnSale)
                    {
                        <span class="badge badge-warning ml-1">@L("OnSale")</span>
                    }
                </div>
            </div>
        </div>

        <!-- Bên phải: Thông tin -->
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <!-- Giá -->
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">@L("Price")</div>
                        <div class="col-sm-8">
                            <span class="font-weight-bold">@Model.Price.ToString("0.00")</span>
                            @if (Model.IsOnSale && Model.DiscountPrice.HasValue && Model.DiscountPrice.Value > 0)
                            {
                                <span class="text-danger font-weight-bold ml-2">
                                    @Model.DiscountPrice.Value.ToString("0.00")
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Số lượng tồn -->
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">@L("StockQuantity")</div>
                        <div class="col-sm-8">@Model.StockQuantity</div>
                    </div>

                    <!-- Danh mục -->
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">@L("Category")</div>
                        <div class="col-sm-8">@Model.CategoryName</div>
                    </div>

                    <!-- Thời gian khuyến mãi -->
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">@L("SalePeriod")</div>
                        <div class="col-sm-8">
                            @if (Model.IsOnSale && Model.SaleStart.HasValue && Model.SaleEnd.HasValue)
                            {
                                <span>@Model.SaleStart.Value.ToString("dd/MM/yyyy HH:mm") - @Model.SaleEnd.Value.ToString("dd/MM/yyyy HH:mm")</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </div>
                    </div>

                    <!-- Mô tả -->
                    <div class="row">
                        <div class="col-sm-4 text-muted">@L("Description")</div>
                        <div class="col-sm-8">@Model.Description</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer border-0">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">
        <i class="fa fa-times"></i> @L("Close")
    </button>
</div>
