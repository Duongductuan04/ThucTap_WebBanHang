@model SimpleTaskApp.MobilePhones.Dto.CreateOrderDto

@{
    Layout = "~/Views/Shared/Layout/_LayoutFrontend.cshtml";
    ViewBag.Title = "Thanh toán";

    // Lấy cartIds từ query string và lưu vào ViewBag
    var cartIdsQuery = Context.Request.Query["cartIds"];
    ViewBag.CartIds = cartIdsQuery;
}

<h2 class="mb-4">Đơn hàng của bạn</h2>

<div class="card mb-4 shadow-sm">
    <div class="card-body p-3">
        <table class="table table-bordered align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="text-center">Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th class="text-center">Số lượng</th>
                    <th class="text-end">Đơn giá</th>
                    <th class="text-end">Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.OrderDetails != null && Model.OrderDetails.Any())
                {
                    foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td class="text-center"><img src="@item.ImageUrl" width="60" class="img-thumbnail" /></td>
                            <td>@item.MobilePhoneName</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@item.UnitPrice.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) đ</td>
                            <td class="text-end">@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:N0} đ", item.Quantity * item.UnitPrice)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Đơn hàng trống</td>
                    </tr>
                }
            </tbody>
        </table>

        <p class="h5 text-end fw-bold mt-3">
            Tổng đơn hàng:
            <span class="badge bg-success text-white">
                @Model.OrderDetails?.Sum(x => x.Quantity * x.UnitPrice).ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) đ
            </span>
        </p>
    </div>
</div>

<h2 class="mb-3">Thông tin thanh toán</h2>

<div class="card p-4 shadow-sm bg-light">
    <form asp-action="Create" asp-controller="Orders" method="post" class="row g-3">
        <!-- Thêm các hidden fields cho cartIds từ ViewBag -->
        @if (Model.OrderDetails != null
        && Model.OrderDetails.Count == 1
        && Model.OrderDetails[0].MobilePhoneId > 0)
        {
            <input type="hidden" name="MobilePhoneId" value="@Model.OrderDetails[0].MobilePhoneId" />
            <input type="hidden" name="Quantity" value="@Model.OrderDetails[0].Quantity" />
        }
        else
        {
            @* Hidden input cho các sản phẩm trong giỏ hàng *@
            @if (ViewBag.CartIds is Microsoft.Extensions.Primitives.StringValues cartIds && cartIds.Count > 0)
            {
                foreach (var id in cartIds)
                {
                    <input type="hidden" name="cartIds" value="@id" />
                }
            }
        }

        <div class="col-md-6">
            <label asp-for="RecipientName" class="form-label">Tên người nhận</label>
            <input asp-for="RecipientName" class="form-control" placeholder="Nhập tên người nhận" />
            <span asp-validation-for="RecipientName" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="RecipientPhone" class="form-label">Số điện thoại</label>
            <input asp-for="RecipientPhone" class="form-control" placeholder="Nhập số điện thoại" />
            <span asp-validation-for="RecipientPhone" class="text-danger small"></span>
        </div>

        <div class="col-12">
            <label asp-for="RecipientAddress" class="form-label">Địa chỉ nhận hàng</label>
            <input asp-for="RecipientAddress" class="form-control" placeholder="Nhập địa chỉ" />
            <span asp-validation-for="RecipientAddress" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PaymentMethod" class="form-label">Phương thức thanh toán</label>
            @Html.DropDownListFor(m => m.PaymentMethod, new List<SelectListItem>
            {
            new SelectListItem { Text = "Tiền mặt (COD)", Value = "0" },
            new SelectListItem { Text = "Chuyển khoản ngân hàng", Value = "1" },
            new SelectListItem { Text = "Ví điện tử", Value = "2" }
            }, new { @class = "form-select" })
            <span asp-validation-for="PaymentMethod" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ShippingMethod" class="form-label">Phương thức vận chuyển</label>
            @Html.DropDownListFor(m => m.ShippingMethod, new List<SelectListItem>
            {
            new SelectListItem { Text = "Tiêu chuẩn", Value = "0" },
            new SelectListItem { Text = "Nhanh", Value = "1" },
            new SelectListItem { Text = "Siêu tốc", Value = "2" }
            }, new { @class = "form-select" })
            <span asp-validation-for="ShippingMethod" class="text-danger small"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-success w-100 mt-3">Xác nhận thanh toán</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}