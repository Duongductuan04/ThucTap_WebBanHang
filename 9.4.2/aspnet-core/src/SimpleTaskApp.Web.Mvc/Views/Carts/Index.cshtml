@model List<SimpleTaskApp.MobilePhones.Dto.CartDto>

@{
    Layout = "~/Views/Shared/Layout/_LayoutFrontend.cshtml";
    ViewBag.Title = "Giỏ hàng của bạn";
}

<div class="container my-5">
    <h1 class="mb-4 text-center">Giỏ hàng của bạn</h1>

    @if (Model != null && Model.Count > 0)
    {
        <div class="card shadow-sm p-4">
            <div class="table-responsive">
                <table class="table align-middle table-hover mb-4">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <input type="checkbox" id="selectAll" />
                            </th>
                            <th>Ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="selectItem" value="@item.Id" />
                                </td>
                                <td><img src="@item.ImageUrl" class="img-thumbnail" style="max-width:80px;" /></td>
                                <td>@item.Name</td>
                                <td>@String.Format("{0:N0} VNĐ", item.DisplayPrice)</td>
                                <td>
                                    <form method="post" asp-action="UpdateQuantity" asp-controller="Carts" class="d-flex align-items-center">
                                        <input type="hidden" name="cartId" value="@item.Id" />
                                        <input type="number" name="quantity" class="form-control me-2" value="@item.Quantity" min="1" max="@item.StockQuantity" style="width:70px;"
                                               data-max="@item.StockQuantity" />
                                        <button type="submit" class="btn btn-primary btn-sm">Cập nhật</button>
                                    </form>
                                </td>
                                <td>@String.Format("{0:N0} VNĐ", item.DisplayPrice * item.Quantity)</td>
                                <td>
                                    <form method="post" asp-action="DeleteCartItem" asp-controller="Carts">
                                        <input type="hidden" name="cartId" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <div>
                    <h4 class="fw-bold">Tổng tiền tất cả: @String.Format("{0:N0} VNĐ", Model.Sum(x => x.DisplayPrice * x.Quantity))</h4>
                    <h4 class="fw-bold text-primary">Tổng tiền đã chọn: <span id="totalAmount">0 VNĐ</span></h4>
                </div>
                <button type="button" id="checkoutBtn" class="btn btn-success">Thanh toán</button>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">Giỏ hàng trống</h3>
            <p class="text-muted">Bạn chưa thêm sản phẩm nào vào giỏ hàng.</p>
            <a class="btn btn-primary btn-lg mt-3" href="@Url.Action("Index", "Home")">Tiếp tục mua sắm</a>
        </div>
    }
</div>

<!-- 1. jQuery -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<!-- 2. ABP.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/abp/5.3.0/abp.js"></script>
<script>
    const checkoutUrl = '@Url.Action("Checkout", "Orders")';
</script>
<script src="~/view-resources/Views/Carts/CheckOut.js" asp-append-version="true"></script>
