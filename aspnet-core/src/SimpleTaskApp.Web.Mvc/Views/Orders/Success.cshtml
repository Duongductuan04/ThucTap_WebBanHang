@{
    Layout = "~/Views/Shared/Layout/_LayoutFrontend.cshtml";
    ViewBag.Title = "Thanh toán thành công";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-header bg-warning text-dark py-4 text-center">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-check-circle-fill display-1 mb-3 text-dark"></i>
                    <h2 class="fw-bold mb-2">ĐẶT HÀNG THÀNH CÔNG!</h2>
                    <p class="mb-0 opacity-75">Cảm ơn bạn đã mua sắm tại cửa hàng của chúng tôi</p>
                </div>
            </div>

                    <!-- Thông báo và nút hành động -->
                    <div class="text-center p-4 bg-light rounded">
                        <div class="mb-4">
                            <i class="bi bi-envelope-check text-primary display-4 mb-3"></i>
                            <h4 class="fw-bold text-success">Đơn hàng đã được xác nhận!</h4>
                            <p class="text-muted mb-4">
                                Chúng tôi đã gửi email xác nhận đơn hàng đến bạn.
                                Đơn hàng sẽ được xử lý và giao đến bạn trong thời gian sớm nhất.
                            </p>
                        </div>

                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg px-4">
                                <i class="bi bi-house me-2"></i>VỀ TRANG CHỦ
                            </a>
                            <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary btn-lg px-4">
                                <i class="bi bi-bag me-2"></i>TIẾP TỤC MUA SẮM
                            </a>
                            <button class="btn btn-outline-success btn-lg px-4" onclick="window.print()">
                                <i class="bi bi-printer me-2"></i>IN ĐƠN HÀNG
                            </button>
                        </div>

                        <div class="mt-4">
                            <small class="text-muted">
                                <i class="bi bi-telephone me-1"></i>
                                Cần hỗ trợ? Liên hệ hotline: <strong>0797183943</strong>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
