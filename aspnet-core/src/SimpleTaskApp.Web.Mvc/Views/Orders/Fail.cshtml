@{
    Layout = "~/Views/Shared/Layout/_LayoutFrontend.cshtml";
    ViewBag.Title = "Thanh toán thất bại";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-header bg-danger text-white py-4 text-center">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-x-circle-fill display-1 mb-3 text-white"></i>
                    <h2 class="fw-bold mb-2">THANH TOÁN THẤT BẠI!</h2>
                    <p class="mb-0 opacity-75">Rất tiếc, giao dịch của bạn chưa được thực hiện thành công</p>
                </div>
            </div>

            <!-- Thông báo và nút hành động -->
            <div class="text-center p-4 bg-light rounded">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle text-danger display-4 mb-3"></i>
                    <h4 class="fw-bold text-danger">Có lỗi xảy ra khi xử lý thanh toán!</h4>
                    <p class="text-muted mb-4">
                        @if (TempData["PaymentMessage"] != null)
                        {
                            @TempData["PaymentMessage"]
                        }
                        else
                        {
                            <text>Vui lòng thử lại hoặc chọn phương thức thanh toán khác.</text>
                        }
                    </p>
                </div>

                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="@Url.Action("Index", "Carts")" class="btn btn-outline-danger btn-lg px-4">
                        <i class="bi bi-cart4 me-2"></i>QUAY LẠI GIỎ HÀNG
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-house me-2"></i>VỀ TRANG CHỦ
                    </a>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary btn-lg px-4">
                        <i class="bi bi-bag me-2"></i>TIẾP TỤC MUA SẮM
                    </a>
                </div>

                <div class="mt-4">
                    <small class="text-muted">
                        <i class="bi bi-telephone me-1"></i>
                        Cần hỗ trợ? Liên hệ hotline: <strong>0797183943</strong>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
