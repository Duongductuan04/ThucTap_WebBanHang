@using SimpleTaskApp.MobilePhones
@using SimpleTaskApp.MobilePhones.Dto
@using SimpleTaskApp.Web.Startup

@{
    ViewBag.Title = L("MobilePhones");
}

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/MobilePhones/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/MobilePhones/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@L("MobilePhones")</h1>
            </div>
            <div class="col-sm-6 text-right">
                <button type="button" class="btn bg-blue create-mobilephone">
                    <i class="fa fa-plus-square"></i> @L("Create")
                </button>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Optional: bulk actions -->
                    </div>
                    <div class="col-md-6">
                        <!-- Partial view tìm kiếm nâng cao -->
                        @await Html.PartialAsync("~/Areas/Admin/Views/MobilePhones/Index.AdvancedSearch.cshtml")
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="MobilePhonesTable" class="table table-striped table-bordered" aria-label="@L("MobilePhones")">
                        <thead>
                            <tr>
                                <th scope="col" style="width:30px"></th>
                                <th>@L("Name")</th>
                                <th>@L("Price")</th>
                                <th>@L("DiscountPrice")</th>
                                <th>@L("Brand")</th>
                                <th>@L("Image")</th>
                                <th scope="col" style="width:200px">@L("Actions")</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal tạo MobilePhone -->
<div class="modal fade" id="MobilePhoneCreateModal" tabindex="-1" role="dialog" aria-labelledby="MobilePhoneCreateModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @* Nội dung Create load qua AJAX *@
        </div>
    </div>
</div>

<!-- Modal chỉnh sửa MobilePhone -->
<div class="modal fade" id="MobilePhoneEditModal" tabindex="-1" role="dialog" aria-labelledby="MobilePhoneEditModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @* Nội dung Edit load qua AJAX *@
        </div>
    </div>
</div>

<!-- Modal chi tiết MobilePhone -->
<div class="modal fade" id="MobilePhoneDetailModal" tabindex="-1" role="dialog" aria-labelledby="MobilePhoneDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @* Nội dung Detail load qua AJAX *@
        </div>
    </div>
</div>
