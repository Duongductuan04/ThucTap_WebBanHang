@model SimpleTaskApp.MobilePhones.Dto.OrderDto
@using System.Globalization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hóa đơn #@Model.Id</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .invoice-header {
            border-bottom: 2px solid #333;
            margin-bottom: 10px;
            padding-bottom: 10px;
        }

        .invoice-order-id {
            text-align: center;
            font-size: 1.2rem;
            font-weight: bold;
            margin: 10px 0 20px 0;
            color: #343a40;
        }

        .invoice-footer {
            border-top: 2px solid #333;
            margin-top: 20px;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container my-4">
        <!-- Header: Logo + Shop info -->
        <div class="d-flex justify-content-between align-items-center invoice-header">
            <div>
                <img src="~/img/08Oct_Anis__Free_Upload_bbbb-removebg-preview.png" alt="Shop Logo" style="height:80px;">
            </div>
            <div class="text-end">
                <h3 class="mb-0 fw-bold">Tuấn Tech</h3>
                <p class="mb-0">Hotline: 0797183943</p>
                <p class="mb-0">Email: duongductuan361@gmail.com</p>
                <p class="mb-0">Địa chỉ: 105 Phố Trần Hòa, Định Công, Hoàng Mai, Hà Nội</p>
            </div>
        </div>

        <!-- Mã đơn hàng căn giữa -->
        <div class="invoice-order-id">
            MÃ ĐƠN HÀNG: #@Model.Id
        </div>

        <!-- Thông tin người nhận -->
        <div class="mt-4 mb-4">
            <h5 class="fw-bold">Thông tin khách hàng</h5>
            <p><strong>Người nhận:</strong> @Model.RecipientName</p>
            <p><strong>Địa chỉ:</strong> @Model.RecipientAddress</p>
            <p><strong>Điện thoại:</strong> @Model.RecipientPhone</p>
        </div>

        <!-- Bảng chi tiết đơn hàng -->
        <table class="table table-bordered table-striped">
            <h5 class="fw-bold">Thông tin đơn hàng</h5>

            <thead class="table-light">
                <tr>
                    <th>Sản phẩm</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var od in Model.OrderDetails)
                {
                    <tr>
                        <td>@od.MobilePhoneName</td>
                        <td>@od.UnitPrice.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))</td>
                        <td>@od.Quantity</td>
                        <td>@((od.UnitPrice * od.Quantity).ToString("C0", CultureInfo.GetCultureInfo("vi-VN")))</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Tổng kết -->
        <div class="d-flex flex-column align-items-end mt-3">
            <p><strong>Tổng tiền sản phẩm:</strong> @Model.TotalAmount.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))</p>
            <p><strong>Phí vận chuyển:</strong> @Model.ShippingFee.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))</p>
            @if (Model.DiscountAmount > 0)
            {
                <p><strong>Giảm giá (@Model.DiscountCode):</strong> -@Model.DiscountAmount.Value.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))</p>
            }
            <h5 class="fw-bold mt-2"><strong>Thanh toán cuối cùng:</strong> @Model.FinalAmount.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))</h5>
        </div>

        <!-- Footer -->
        <div class="invoice-footer text-center mt-4">
            <p>Cảm ơn bạn đã mua sắm tại Tuấn Tech!</p>
            <p>Mọi thắc mắc vui lòng liên hệ hotline: <strong>0797183943</strong></p>
            <button class="btn btn-primary mt-3 no-print" onclick="window.print();">In hóa đơn</button>
        </div>
    </div>
</body>
</html>
