@using SimpleTaskApp.MobilePhones
@using SimpleTaskApp.MobilePhones.Dto
@using SimpleTaskApp.Web.Startup

@{
    ViewBag.Title = L("Imports");
}

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Imports/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Imports/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@L("Imports")</h1>
            </div>
            <div class="col-sm-6 text-right">
                <button type="button" class="btn bg-blue create-import">
                    <i class="fa fa-plus-square"></i> @L("Create")
                </button>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="ImportsTable" class="table table-striped table-bordered" aria-label="@L("Imports")">
                        <thead>
                            <tr>
                                <th style="width:30px"></th>
                                <th>@L("ImportCode")</th>
                                <th>@L("SupplierName")</th>
                                <th>@L("KeeperName")</th>
                                <th>@L("KeeperPhone")</th>
                                <th>@L("CreationTime")</th>
                                <th style="width:200px">@L("Actions")</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal tạo Import -->
<div class="modal fade" id="ImportCreateModal" tabindex="-1" role="dialog" aria-labelledby="ImportCreateModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @* Nội dung Create load qua AJAX *@
        </div>
    </div>
</div>

<!-- Modal chỉnh sửa Import -->
<div class="modal fade" id="ImportEditModal" tabindex="-1" role="dialog" aria-labelledby="ImportEditModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @* Nội dung Edit load qua AJAX *@
        </div>
    </div>
</div>

<!-- Modal chi tiết Import -->
<div class="modal fade" id="ImportDetailModal" tabindex="-1" role="dialog" aria-labelledby="ImportDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @* Nội dung Detail load qua AJAX *@
        </div>
    </div>
</div>
