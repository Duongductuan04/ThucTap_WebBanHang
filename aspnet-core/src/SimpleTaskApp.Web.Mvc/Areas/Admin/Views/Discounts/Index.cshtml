@using SimpleTaskApp.MobilePhones
@using SimpleTaskApp.MobilePhones.Dto
@using SimpleTaskApp.Areas.Admin.Models.Discounts
@using SimpleTaskApp.Web.Startup

@{
    ViewBag.Title = L("Discounts");
}

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Discounts/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Discounts/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@L("Discounts")</h1>
            </div>
            <div class="col-sm-6 text-right">
                <button type="button" class="btn bg-blue create-discount">
                    <i class="fa fa-plus-square"></i> @L("Create")
                </button>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="DiscountsTable" class="table table-striped table-bordered" aria-label="@L("Discounts")">
                        <thead>
                            <tr>
                                <th scope="col" style="width:30px"></th>
                                <th>@L("Name")</th>
                                <th>@L("Code")</th>
                                <th>@L("Discount")</th>
                                <th>@L("ApplyType")</th>
                                <th>@L("Duration")</th>
                                <th>@L("IsActive")</th>
                                <th scope="col" style="width:200px">@L("Actions")</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal tạo Discount -->
<div class="modal fade" id="DiscountCreateModal" tabindex="-1" role="dialog" aria-labelledby="DiscountCreateModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @* Nội dung Create load qua AJAX *@
        </div>
    </div>
</div>

<!-- Modal chỉnh sửa Discount -->
<div class="modal fade" id="DiscountEditModal" tabindex="-1" role="dialog" aria-labelledby="DiscountEditModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @* Nội dung Edit load qua AJAX *@
        </div>
    </div>
</div>

<!-- Modal chi tiết Discount -->
<div class="modal fade" id="DiscountDetailModal" tabindex="-1" role="dialog" aria-labelledby="DiscountDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @* Nội dung Detail load qua AJAX *@
        </div>
    </div>
</div>
